<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <form class="form-signin">
    <h2 class="form-signin-heading">Please Sign in</h2>

    <label for="Input-Email" class="sr-only">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Adress" %>
  </label>
  <input type="Email" id="Input-Email" class="form-control" placeholder="Email Adress" required autofocus>

  <label for="Input-Password" class="sr-only">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
  </label>
  <input type="Password" id="Input-Password" class="form-control" placeholder="Password" required>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <input type"checkbox" value="remember_me"
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
       </label>
    </div>
  <% end -%>

   <button class="btn btn-lg btn-primary btn-block">
     Sign in
   </button>
  </form>
</div>
<% end %>


  <%= render "devise/shared/links" %>
 </div>
</div>
