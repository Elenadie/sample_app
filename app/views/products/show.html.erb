<div class="page-wrap">
  <div class="col-md-6 col-xs-12">
    <div>
      <p>
         <%= @product.image_url %>
      </p>
    </div>
  </div>
  <div class="col-md-6 col-xs-12 product-description">
    <div class="product-info-box">
      <p class="product-name">
        <strong><%= @product.name %></strong>
     </p>
      <p class="product-description">
        <%= @product.description %>
      </p>
      <p class="product-price">
        <strong>Price 30â‚¬</strong>
        <%= @product.price %>
      </p>
      <p class="product-colour">
        <strong>Color</strong><br>
          <%= @product.colour %>
      </p>
      
    </div>
    <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
  </div>
<p id="notice"><%= notice %></p>

  <% if @product.lowest_rating_comment %>
      <%= @product.lowest_rating_comment.body %>
  <% end %>

  <%= render 'new_comment' %>
  <%= render 'comments' %>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div><!-- end container-fluid -->
