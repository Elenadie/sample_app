<div class="page-wrap">
  <div class="col-md-6 col-xs-12">
    <div>
      <p>

         <%= image_tag(@product.image_url, class: "img-responsive")%>
      </p>
    </div>
  </div>
  <div class="col-md-6 col-xs-12 product-description">
    <div class="product-info-box">
      <p class="product-name">
        <strong><%= @product.name %></strong>
     </p>
      <p class="product-description">
        <%= @product.description %>
      </p>
      <p class="product-price">
        <strong>Price</strong>
        <strong><%= @product.price %>â‚¬</strong>
      </p>
      <p class="product-colour">
        <strong>Color</strong><br>
          <%= @product.colour %>
      </p>
      <p>Average Rating: <div class="rated average-rating" data-score="<%= @product.average_rating %>"></div> </p>

  </div>
</div>

<%= form_with(url: '/payments/create') do |form| %>
<%= render partial: "shared/stripe_checkout_button" %>
<% end %>

 <% if @product.lowest_rating_comment %>
      <%= @product.lowest_rating_comment.body %>
 <% end %>

    <%= render 'new_comment' %>
    <%= render 'comments' %>

</div>
<p class="paginate"><%= will_paginate @comments %></p>

