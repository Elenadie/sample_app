<!DOCTYPE html>
<html>
  <head>
    <title>Bookland</title>

     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

     <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

     <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>

  </head>

<body>
   <% if notice %>
       <p id="notice" class="alert alert-info"><%= notice %></p>
   <% end %>

   <% if alert %>
      <p id="alert" class="alert"><%= alert %></p>
   <% end %>

<nav class="navbar navbar-default navbar-static-top">
  <div class="container-fluid">
     <div class="collapse navbar-collapse color" id="bs-example-navbar-collapse-1">
       <ul>
          <li>
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            <% else %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
          <li><%= link_to "Orders", orders_path %></li>
          <li><%= link_to "Products", products_path %></li>
          <li><%= link_to "Contact", simple_pages_contact_path %></li>
          <li><%= link_to "About", simple_pages_about_path %></li>
          <li><%= link_to "Home", root_path %></li>
          <div class="navbar-form navbar-left">
            <div class="form-group">
               <%= form_with(url: products_path, method: 'get', local: true) do |form| %>
               <%= form.text_field :q, id: 'q', value: params[:q], class: 'form-control', placeholder: 'Search' %>
               <%= form.submit 'Search', class:'btn btn-default' %>

             <% end %>
           </div>
        </div>
      </ul>
    </div>
  </div>
</nav>
  <%= yield %>

   <footer>
      &copy; 2018 Bookland
   </footer>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </body>
</html>
