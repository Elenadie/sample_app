<!DOCTYPE html>
<html>
  <head>
    <title>Bookland</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
 </head>
<body>
  <% if notice %>
    <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert %>
    <p id="alert" class="alert"><%= alert %></p>
  <% end %>
    <div class="navbar-collapse">
      <ul>
         <li><%= link_to "Home", root_path %></li>
         <li><%= link_to "About", simple_pages_about_path %></li>
         <li><%= link_to "Contact", simple_pages_contact_path %></li>
         <li><%= link_to "Products", products_path %></li>

  <%= form_with(url: products_path, method: 'get', local: true) do |form| %>
  <%= form.label :q, 'Search for:' %>
  <%= form.text_field :q, id: 'q', value: params[:q] %>
  <%= form.submit 'Search' %>
<% end %>
       </ul>
       <ul class="nav pull-right">
         <li>
            <% if user_signed_in? %>
               <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            <% else %>
               <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
       </ul>

     </div>



    <%= yield %>
     <footer>
      &copy; 2018 Bookland
     </footer>

  </body>
</html>
